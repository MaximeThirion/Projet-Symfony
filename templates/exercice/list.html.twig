{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <main class="container">
        <h1>List of Exercice</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Label</th>
                <th scope="col">Course</th>
                <th scope="col">Users</th>
                <th scope="col">Edit</th>
            </tr>
            </thead>
            <tbody>
            {% for exercice in exerciceList %}
                <tr>
                    <td class="align-middle">{{ exercice.id }}</td>
                    <td class="align-middle">{{ exercice.label }}</td>
                    <td class="align-middle">{{ exercice.course }}</td>
                    <td class="align-middle">{{ exercice.users | length }}</td>
                    <td class="align-middle"><a class="btn btn-primary" href="{{ path('exercice_update', {'id': exercice.id}) }}"><i class="far fa-edit"></i> Edit</a> <a class="btn btn-danger" href="{{ path('exercice_delete', {'id': exercice.id}) }}"><i class="far fa-trash-alt"></i> Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}