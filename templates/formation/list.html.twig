{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>List of Formation</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Label</th>
                <th scope="col">Courses</th>
                <th scope="col">Users</th>
                <th scope="col" colspan="2">Edit</th>
            </tr>
            </thead>
            <tbody>
            {% for formation in formationList %}
                <tr>
                    <td>{{ formation.id }}</td>
                    <td>{{ formation.label }}</td>
                    <td>{{ formation.courses | length }}</td>
                    <td>{{ formation.users | length }}</td>
                    <td><a href="{{ path('formation_update', {'id': formation.id}) }}"><i class="far fa-edit"></i></a></td>
                    <td><a href="{{ path('formation_delete', {'id': formation.id}) }}"><i class="far fa-trash-alt"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}