{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <main class="container">
        <h1>List of User</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Avatar</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Email</th>
                <th scope="col">Formations</th>
                <th scope="col">Exercices</th>
                <th scope="col">Active</th>
                <th scope="col">Edit</th>
            </tr>
            </thead>
            <tbody>
            {% for user in userList %}
                <tr>
                    <td class="align-middle">{{ user.id }}</td>
                    <td class="align-middle"><img class="rounded" src="{{ asset('uploads/avatar/' ~ user.avatar) }}" height="40px" width="40px"></td>
                    <td class="align-middle">{{ user.firstname }}</td>
                    <td class="align-middle">{{ user.lastname }}</td>
                    <td class="align-middle">{{ user.email }}</td>
                    <td class="align-middle">{{ user.formations | length }}</td>
                    <td class="align-middle">{{ user.exercices | length }}</td>
                    {% if user.active == "0" %}
                        <td class="align-middle"><div class="btn btn-danger"><i class="fas fa-times" style="width: 15px;height: 15px"></i></div></td>
                    {% else %}
                        <td class="align-middle"><div class="btn btn-success"><i class="fas fa-check" style="width: 15px;height: 15px"></i></div></td>
                    {% endif %}
                    <td class="align-middle"><a class="btn btn-primary" href="{{ path('user_update', {'id': user.id}) }}"><i class="far fa-edit"></i> Edit</a> <a class="btn btn-danger" href="{{ path('user_delete', {'id': user.id}) }}"><i class="far fa-trash-alt"></i> Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}