{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>List of User</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Avatar</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Email</th>
                <th scope="col">Formations</th>
                <th scope="col">Exercices</th>
                <th scope="col">Active</th>
                <th scope="col">Edit</th>
            </tr>
            </thead>
            <tbody>
            {% for user in userList %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td><img class="rounded" src="{{ asset('uploads/avatar/' ~ user.avatar) }}" height="40px" width="40px"></td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.formations | length }}</td>
                    <td>{{ user.exercices | length }}</td>
                    {% if user.active == "0" %}
                        <td><a class="btn btn-danger" href=""><i class="fas fa-times" style="width: 15px;height: 15px"></i></a></td>
                    {% else %}
                        <td><a class="btn btn-success" href=""><i class="fas fa-check" style="width: 15px;height: 15px"></i></a></td>
                    {% endif %}
                    <td><a class="btn btn-primary" href="{{ path('user_update', {'id': user.id}) }}"><i class="far fa-edit"></i> Edit</a> <a class="btn btn-danger" href="{{ path('user_delete', {'id': user.id}) }}"><i class="far fa-trash-alt"></i> Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}